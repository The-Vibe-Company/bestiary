generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Note: User authentication is now managed by Neon Auth (in neon_auth schema)
// This model is no longer needed for authentication
// Keep this file for future custom data models

model Village {
  id        String   @id @default(cuid())
  x         Int
  y         Int
  ownerId   String   @unique  // 1 village par user
  createdAt DateTime @default(now())

  @@unique([x, y])  // Une seule village par coordonn√©e
}

model UserResources {
  id        String   @id @default(cuid())
  userId    String   @unique
  bois      Int      @default(100)
  pierre    Int      @default(50)
  cereales  Int      @default(30)
  viande    Int      @default(20)
  or        Int      @default(10)
  savoir    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
