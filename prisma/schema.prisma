generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Note: User authentication is managed by Neon Auth (in neon_auth schema)
// This User model syncs with Neon Auth to add custom fields and constraints

model User {
  id        String   @id // Same ID as Neon Auth
  email     String   @unique
  username  String   @unique // Pseudo - must be unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  village   Village?
  resources UserResources?

  @@map("Users")
}

model Village {
  id        String   @id @default(cuid())
  x         Int
  y         Int
  ownerId   String   @unique // 1 village par user
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([x, y]) // Une seule village par coordonn√©e
  @@map("Villages")
}

model UserResources {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bois      Int      @default(100)
  pierre    Int      @default(50)
  cereales  Int      @default(30)
  viande    Int      @default(20)
  or        Int      @default(10)
  savoir    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("UserResources")
}
